-- Load OrionLib
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/Giangplay/Script/main/Orion_Library_PE_V2.lua"))()

-- Check if OrionLib is loaded
if not OrionLib then
    warn("Failed to load OrionLib")
    return
end

-- Create the main window using OrionLib
local Window = OrionLib:MakeWindow({
    Name = "Slap Battles Hub",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "SlapBattlesHub"
})

-- Create the "Main" tab
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998", -- Example Icon ID
    PremiumOnly = false
})

-- Create a TextLabel for error messages
local errorMessageLabel = MainTab:AddTextLabel({
    Name = "ErrorMessageLabel",
    Text = "Loading script...",
    Size = UDim2.new(0, 300, 0, 50),
    Position = UDim2.new(0, 50, 0, 100),
    Font = Enum.Font.SourceSans,
    TextSize = 18,
    TextColor3 = Color3.fromRGB(255, 0, 0), -- Red color for error messages
})

-- Add a button to load the "Slap Farm" script
MainTab:AddButton({
    Name = "Load Slap Farm Script",
    Callback = function()
        -- URL for the Slap Farm script
        local scriptURL = "https://raw.githubusercontent.com/RobloxScripts2020/SlapBattlesCoders/refs/heads/main/-100/unpatched"
        
        -- Attempt to load the script
        local success, errorMessage = pcall(function()
            local scriptContent = game:HttpGet(scriptURL)
            loadstring(scriptContent)()
        end)
        
        -- If the pcall fails, show an error message
        if not success then
            errorMessageLabel.Text = "Failed to get HTTP request: " .. errorMessage
        else
            errorMessageLabel.Text = "Slap Farm Script Loaded Successfully!"
        end
    end
})

-- Create a second tab for extra functionality
local ExtrasTab = Window:MakeTab({
    Name = "Extras",
    Icon = "rbxassetid://6031071050",  -- Example Icon ID for Extras tab
    PremiumOnly = false
})

-- Add a button to check if the player has the "Mace" glove
ExtrasTab:AddButton({
    Name = "Mace Slap Farm",
    Callback = function()
        local player = game.Players.LocalPlayer
        local glove = player.leaderstats and player.leaderstats.Glove and player.leaderstats.Glove.Value

        if glove == "mace" then
            -- Load the Mace slap farm script
            local scriptURL = "https://raw.githubusercontent.com/RobloxScripts2020/SlapBattlesCoders/refs/heads/main/-100/hiiamslapfarmiamveryfamous"
            local success, errorMessage = pcall(function()
                local scriptContent = game:HttpGet(scriptURL)
                loadstring(scriptContent)()
            end)

            -- If successful, show success message
            if success then
                errorMessageLabel.Text = "Mace Slap Farm Loaded!"
            else
                -- Show error if loading fails
                errorMessageLabel.Text = "Failed to load Mace Slap Farm: " .. errorMessage
            end
        else
            -- If player doesn't have the Mace glove equipped
            errorMessageLabel.Text = "You need to equip the Mace glove to use this feature."
        end
    end
})

-- Add another button for any additional functionality (for example)
ExtrasTab:AddButton({
    Name = "Test Button",
    Callback = function()
        OrionLib:MakeNotification({
            Name = "Test",
            Content = "This is just a test button!",
            Image = "rbxassetid://4483345998",
            Time = 3
        })
        print("Test Button clicked!")
    end
})

-- Final message indicating the UI is ready
print("Slap Battles Hub UI should now be visible.")

